<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            //Sign up

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign up"
                    android:textSize="18sp"
                    app:layout_constraintHorizontal_bias="0.047"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.06" />


            </LinearLayout>

            // Tutor - sign up

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\nTutor - Sign up"
                    android:textSize="25sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.391"
                    app:layout_constraintStart_toEndOf="@+id/textView2"
                    tools:layout_editor_absoluteY="130dp" />


            </LinearLayout>


            //Email address and email

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                //email address

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\nEmail address"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.391"
                        tools:layout_editor_absoluteY="20dp" />

                </LinearLayout>

                //email

                <EditText
                    android:id="@+id/tutor_register_email"
                    android:layout_width="400dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1.05"
                    android:gravity="center_vertical|center_horizontal"
                    android:hint="email" />


            </LinearLayout>

            //Username and username

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                //Username

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.391"
                        tools:layout_editor_absoluteY="20dp" />

                </LinearLayout>

                //username

                <EditText
                    android:id="@+id/tutor_register_username"
                    android:layout_width="400dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1.05"
                    android:gravity="center_vertical|center_horizontal"
                    android:hint="username" />


            </LinearLayout>


            //Password and password

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                //Password

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.391"
                        tools:layout_editor_absoluteY="20dp" />

                </LinearLayout>


                //password

                <EditText
                    android:id="@+id/tutor_register_password"
                    android:layout_width="400dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1.05"
                    android:gravity="center_vertical|center_horizontal"
                    android:hint="password" />

            </LinearLayout>

            //re-enter assword

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                //password

                <EditText
                    android:id="@+id/tutor_register_reenter_password"
                    android:layout_width="400dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1.05"
                    android:gravity="center_vertical|center_horizontal"
                    android:hint="re-enter password" />

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"></Space>

            //Enter button below

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/tutor_register_enter"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Sign up"
                    tools:layout_editor_absoluteX="137dp"
                    tools:layout_editor_absoluteY="239dp" />

            </LinearLayout>


            <Space
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1"></Space>


            //login button below

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/tutor_register_go_to_login"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:text="Registered? Log in here"
                    tools:layout_editor_absoluteX="137dp"
                    tools:layout_editor_absoluteY="239dp" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>